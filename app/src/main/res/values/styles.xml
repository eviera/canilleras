<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="boton" parent="@style/Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/fondoBotones</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:popupBackground">@color/fondoSpinner</item>
    </style>

</resources>
